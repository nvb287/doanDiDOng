<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cau_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Câu Số : 1"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mang_textView"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:text="3"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/cau_textView"
        app:layout_constraintTop_toTopOf="@+id/cau_textView" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="59dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toEndOf="@+id/mang_textView"
        app:layout_constraintTop_toTopOf="@+id/mang_textView"
        app:srcCompat="@drawable/traitim_icon" />

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:text="00 : 00"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/cau_textView"
        app:layout_constraintStart_toStartOf="@+id/cau_textView"
        app:layout_constraintTop_toBottomOf="@+id/cau_textView" />

    <TextView
        android:id="@+id/cauHoi_textView"
        android:layout_width="375dp"
        android:layout_height="24dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="Câu hỏi : ------------------------------------------------------------- "
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_textView" />

    <Button
        android:id="@+id/a_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="30dp"
        android:text="A"
        app:layout_constraintEnd_toEndOf="@+id/cauHoi_textView"
        app:layout_constraintStart_toStartOf="@+id/cauHoi_textView"
        app:layout_constraintTop_toBottomOf="@+id/cauHoi_textView" />

    <Button
        android:id="@+id/b_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="30dp"
        android:text="B"
        app:layout_constraintEnd_toEndOf="@+id/a_button"
        app:layout_constraintStart_toStartOf="@+id/a_button"
        app:layout_constraintTop_toBottomOf="@+id/a_button" />

    <Button
        android:id="@+id/c_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="30dp"
        android:text="C"
        app:layout_constraintEnd_toEndOf="@+id/b_button"
        app:layout_constraintStart_toStartOf="@+id/b_button"
        app:layout_constraintTop_toBottomOf="@+id/b_button" />

    <Button
        android:id="@+id/d_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="30dp"
        android:text="D"
        app:layout_constraintEnd_toEndOf="@+id/c_button"
        app:layout_constraintStart_toStartOf="@+id/c_button"
        app:layout_constraintTop_toBottomOf="@+id/c_button" />

    <Button
        android:id="@+id/tuVanTaiCho_button"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/tuvantaicho_icon"
        app:layout_constraintStart_toStartOf="@+id/d_button"
        app:layout_constraintTop_toBottomOf="@+id/d_button" />

    <Button
        android:id="@+id/goidienchonguoithan_button"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="@drawable/goidienthoaichonguoithan_icon"
        app:layout_constraintStart_toEndOf="@+id/tuVanTaiCho_button"
        app:layout_constraintTop_toTopOf="@+id/tuVanTaiCho_button" />

    <Button
        android:id="@+id/nammuoinammuoi_button"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="@drawable/nam5050_icon"
        app:layout_constraintStart_toEndOf="@+id/goidienchonguoithan_button"
        app:layout_constraintTop_toTopOf="@+id/goidienchonguoithan_button" />

    <Button
        android:id="@+id/hoiykienkhangia_button"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="@drawable/hoiykienkhangiatrongtruongquay_icon"
        app:layout_constraintEnd_toEndOf="@+id/d_button"
        app:layout_constraintStart_toEndOf="@+id/nammuoinammuoi_button"
        app:layout_constraintTop_toTopOf="@+id/nammuoinammuoi_button" />
</androidx.constraintlayout.widget.ConstraintLayout>