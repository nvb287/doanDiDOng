<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="286dp"
        android:layout_height="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/ten_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bùi Văn Đồng"
        android:textColor="#FF1F8DE4"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@+id/ten_textView"
        app:layout_constraintTop_toBottomOf="@+id/ten_textView"
        app:srcCompat="@drawable/tien_icon" />

    <TextView
        android:id="@+id/tien_textView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="3000000"
        android:textStyle="bold"
        android:textColor="#D30D0D"
        app:layout_constraintEnd_toEndOf="@+id/ten_textView"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

    <Button
        android:id="@+id/choi_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="16dp"
        android:backgroundTint="#03A9F4"
        android:text="Chơi Luôn"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <Button
        android:id="@+id/luatChoi_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F3D068"
        android:text="Luật Chơi"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/choi_button"
        app:layout_constraintStart_toStartOf="@+id/choi_button"
        app:layout_constraintTop_toBottomOf="@+id/choi_button" />

    <Button
        android:id="@+id/lichSu_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="16dp"
        android:backgroundTint="#F86060"
        android:text="Xếp Hạng"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/luatChoi_button"
        app:layout_constraintStart_toStartOf="@+id/luatChoi_button"
        app:layout_constraintTop_toBottomOf="@+id/luatChoi_button" />

    <Button
        android:id="@+id/credit_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFEB3B"
        android:text="Gói Credit"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lichSu_button"
        app:layout_constraintStart_toStartOf="@+id/lichSu_button"
        app:layout_constraintTop_toBottomOf="@+id/lichSu_button" />
</androidx.constraintlayout.widget.ConstraintLayout>