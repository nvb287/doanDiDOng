<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="306dp"
        android:layout_height="211dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ailatrieuphu_icon" />

    <TextView
        android:id="@+id/dangKy_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Đăng Ký"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/taikhoan_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#D7DCE0"
        android:ems="10"
        android:hint="Tài khoản"
        android:textColor="#070606"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dangKy_textView" />

    <EditText
        android:id="@+id/matkhau_text"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#D7DCE0"
        android:ems="10"
        android:hint="Mật khẩu"
        android:textColor="#070606"
        android:inputType="number|textPassword|numberPassword"
        app:layout_constraintEnd_toEndOf="@+id/taikhoan_text"
        app:layout_constraintStart_toStartOf="@+id/taikhoan_text"
        app:layout_constraintTop_toBottomOf="@+id/taikhoan_text" />



    <Button
        android:id="@+id/dongy_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        android:text="Đăng Kí"
        android:background="@drawable/buttonshape"
        app:layout_constraintEnd_toEndOf="@+id/matkhau_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/matkhau_text"
        app:layout_constraintTop_toBottomOf="@+id/matkhau_text" />

    <Button
        android:id="@+id/huy_button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#DB0B0B"
        android:background="@drawable/buttonshape"
        android:text="Hủy"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dongy_button"
        app:layout_constraintStart_toStartOf="@+id/dongy_button"
        app:layout_constraintTop_toBottomOf="@+id/dongy_button" />



</androidx.constraintlayout.widget.ConstraintLayout>